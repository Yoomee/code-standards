.container
.layout-heading.mb-0
  .container
    .row
      .col-lg-12
        %h1 One page layout
.container
#one-page
  .row.m-0
    %section.section1
      .col-md-4.col-md-offset-4.pt-10
        %h1 Hello.
        %p This is the first section of the one page layout. Scroll to get the code.

  .row.m-0
    %section.section2
      .col-md-4.col-md-offset-4.pt-10
        %h1 Hello again! 
        %p This is the second section
      .col-md-4.col-md-offset-4
        %h3 The JQuery 
        =code 'haml' do
          :plain
            ## Jquery code to set the initial section height to fill the viewport ##

            $(document).ready(function(){
                $(".section1").height($(window).height());
                    $(window).resize(function(){
                        $(".section1").height($(window).height());
                });
            });
      .col-md-4.col-md-offset-4
        %h3 The HAML 
        =code 'haml' do
          :plain
          .container
          #one-page
            .row.m-0
              %section.section1
                .col-md-4.col-md-offset-4.pt-10
                  %h1 Hello.
                  %p This is the first section of the one page layout

